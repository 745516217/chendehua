      <text fn="Arial" fh="15" fc="16777215" fa="1" charset="0"> - </text>
      <text fn="Arial" fh="15" fc="16777215" fa="1" charset="238">and </text>
      <text fn="Arial" fh="15" fc="16777215" fa="1" charset="0">displacing hydrogen </text>
      <subsup>
      <text fn="Arial" fh="15" fc="16777215" fa="1" charset="0">H</text>
      <text fn="Arial" fh="13" fc="0" fa="1" charset="238"></text>
